NAME = libft.a

CC = gcc

FLAGS = -Wall -Werror -Wextra

SRCM = ft_*.c

SRCBONUS = ft_lst*.c
all : 
	$(CC)   $(SRCM) -c
	echo "hello"

BONUS:
	$(CC) $(FLAGS) $(SRCBONUS)
clean:
	rm -f *.o
fclean:
	clean
	rm -rf $(NAME)
re:
	fclean all

# !/bin/sh

